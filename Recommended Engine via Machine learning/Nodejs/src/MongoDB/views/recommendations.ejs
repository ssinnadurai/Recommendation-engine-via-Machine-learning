<%- include('partials/header') %>

<div class="container-fluid table-responsive bg-white text-dark" id="mainContent">
  <div class="row">

    <div class="col-sm-10">
      <table class="table table-striped">
        <!--table-hover -->
        <thead>
          <tr>
            <% headers.push("Cosine Similarity") %>
            <% headers.forEach(function(col) { %>
                <% if (col === '_id') return; %>
              <th><%= col %></th>
            <% }); %>
          </tr>
        </thead>

        <tbody>

          <tr>
            <% record['Cosine Similarity'] = "N/A"; %>
            <% headers.forEach(function(col) { %>
              <% if (col === '_id') return; %>
              <td id="<%= col %>-1">
                <strong style="color:brown"><%= record[col] %></strong>
              </td>
            <% }); %>
          </tr>

          <% dataset.forEach(function(entry, index) { %>
            <% entry['Cosine Similarity'] = String(entry['Cosine Similarity']*100).substring(0, 6) + '%' %>
            <tr>
              <% headers.forEach(function(col) { %>
                <% if (col === '_id') return; %>
                <td id="<%= col %><%= index+1 %>">
                  <%= entry[col] %>
                </td>
              <% }); %>
            </tr>
          <% }); %>

        </tbody>
      </table>
    </div>
  </div>
</div>

  <%- include('partials/footer') %>