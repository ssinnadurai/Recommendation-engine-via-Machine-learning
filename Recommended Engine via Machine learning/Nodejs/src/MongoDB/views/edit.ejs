<%- include('partials/header') %>

<div class="container mt-5">

  <h2>Edit <%= datasetName[0].toUpperCase() + datasetName.substring(1) %> Record</h2><br><br>

  <form class="" action="/edit/<%= datasetName %>" method="post">

  <% Object.keys(record.toObject()).forEach(function(column) { %>
    <% if (column === '_id' || column === '__v') { return; } %>
    <div class="form-group">
      <label for="<%= column %>"><%= column %></label>
      <input type="text" id="<%= column %>" name="<%= column %>" class="form-control" value="<%= record[column] %>" required>
    </div>
  <% }) %>

  <input type="hidden" id="_id" name="_id" class="" value="<%= record._id %>">

  <br>
  <button type="submit" class="btn btn-light" style="color:black">Submit</button>
  </form>

</div>

<%- include('partials/footer') %>
